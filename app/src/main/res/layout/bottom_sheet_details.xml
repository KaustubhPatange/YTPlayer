<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorScreen"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout

        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/textView1"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Details"
            android:textStyle="bold"
            android:fontFamily="@font/dmsans_font"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            android:textSize="16sp"
            android:text="File path:  "
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/txtFilePath"
            app:layout_constraintStart_toEndOf="@id/textView2"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:text="---"
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtFilePath"
            android:textSize="16sp"
            android:text="File name:  "
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/txtFileName"
            app:layout_constraintStart_toEndOf="@id/textView3"
            app:layout_constraintTop_toBottomOf="@id/txtFilePath"
            android:textSize="16sp"
            android:text="---"
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtFileName"
            android:textSize="16sp"
            android:text="Size:  "
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/txtSize"
            app:layout_constraintStart_toEndOf="@id/textView4"
            app:layout_constraintTop_toBottomOf="@id/txtFileName"
            android:textSize="16sp"
            android:text="---"
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            android:textSize="16sp"
            android:text="Format:  "
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/txtFormat"
            app:layout_constraintStart_toEndOf="@id/textView5"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            android:textSize="16sp"
            android:text="---"
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            android:textSize="16sp"
            android:text="Length:  "
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/txtLength"
            app:layout_constraintStart_toEndOf="@id/textView6"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            android:textSize="16sp"
            android:text="---"
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            android:textSize="16sp"
            android:text="Bitrate:  "
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/txtBitrate"
            app:layout_constraintStart_toEndOf="@id/textView7"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            android:textSize="16sp"
            android:text="---"
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView7"
            android:textSize="16sp"
            android:text="Sampling rate:  "
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/light_white"
            android:layout_marginTop="15dp"
            android:id="@+id/txtSamplingRate"
            app:layout_constraintStart_toEndOf="@id/textView8"
            app:layout_constraintTop_toBottomOf="@id/textView7"
            android:textSize="16sp"
            android:text="---"
            android:fontFamily="@font/dmsans_font"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>
    <Button
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:id="@+id/button"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:text="OK"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
