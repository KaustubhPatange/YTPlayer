<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/most_popular_card"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true"
    android:layout_width="150dp"
    android:layout_height="160dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:scaleType="centerCrop"
            android:src="@drawable/material_back2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:background="#99d46700"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:background="#99d46700"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView1"
                android:layout_marginStart="10dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/dmsans_font"
                app:layout_constraintBottom_toTopOf="@id/year"
                android:text="Most Popular"
                android:layout_alignTop="@id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
           <TextView
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:textStyle="bold"
               android:textColor="@color/playback_indicator"
               android:layout_marginStart="10dp"
               android:fontFamily="@font/dmsans_font"
               android:textSize="40sp"
               android:id="@+id/year"
               android:text="2019"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>





</android.support.v7.widget.CardView>